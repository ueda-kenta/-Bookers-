<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<tbody>
		<%= @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to 'show', book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>


<h2>New book</h2>
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<%= form_for(@book,url: '/index') do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>

<% end %>