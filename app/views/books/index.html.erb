<h2>メイン</h2>
<%= @books.each do |book| %>
<p>Title</p>
<span><%= book.title %></span>
<p>Body</p>
<span><%= book.body %></span>
<% end %>

<%= form_for(@book,url: '/index') do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
